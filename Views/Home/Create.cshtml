@model SimpleExampleUsingRedis.Models.Car

<!DOCTYPE html>
<html>
<head>
    <title>Добавление машины</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }
        h2 {
            color: #4CAF50;
            text-align: center;
            margin-top: 20px;
        }
        form {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            background-color: white;
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
        }
        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }
        input[type="text"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        input[type="submit"] {
            padding: 10px 20px;
            border: none;
            color: white;
            background-color: #5CBA47;
            cursor: pointer;
            border-radius: 5px;
        }
        input[type="submit"]:hover {
            background-color: #4A9A37;
        }
    </style>
</head>
<body>
    <h2>Добавление машины</h2>
    <form asp-action="create" asp-controller="home">
        <p>
            <label asp-for="Brand">Бренд</label>
            <input type="text" asp-for="Brand" />
        </p>
        <p>
            <label asp-for="Model">Модель</label>
            <input type="text" asp-for="Model" />
        </p>
        <p>
            <label asp-for="EngineCapacity">Объем двигателя</label>
            <input type="text" asp-for="EngineCapacity" />
        </p>
        <p>
            <label asp-for="EnginePower">Мощность двигателя</label>
            <input type="text" asp-for="EnginePower" />
        </p>
        <p>
            <label asp-for="CPP">КПП</label>
            <input type="text" asp-for="CPP" />
        </p>
        <p>
            <label asp-for="MaxSpeed">Максимальная скорость</label>
            <input type="text" asp-for="MaxSpeed" />
        </p>
        <p>
            <input type="submit" value="Отправить" />
        </p>
    </form>
</body>
</html>
